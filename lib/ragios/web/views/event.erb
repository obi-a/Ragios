<script src="/javascripts/event.js"></script>
<div class="modal-header">
    <h4 class="modal-title">Event: <%= @event_id %></h4>
</div>
<div class="modal-body">
    <span id="modal-message"></span>
    <script id="modal-message-template" type="text/template">
        <div class="alert alert-dismissable alert-{{ alert }}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h4>{{ message }}!</h4>
            <p>{{ response }}</p>
        </div>
    </script>

    <div class="panel panel-default">
        <div class="panel-body">
            <button type="button" id="delete-event-button" class="btn btn-default btn-sm" data-loading-text="Loading..." autocomplete="off" >
                <span class="glyphicon glyphicon-trash"></span> Delete Event
            </button>
        </div>
    </div>
    <div id="event-editor"></div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
<span style="display:none" id="event-id"><%= @event_id %></span>
